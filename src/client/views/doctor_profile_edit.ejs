    <div class="siteflow">
        <% if(message == "Email already in use") {%>
            <div class="message incorrect" id="message">
                <i class="fas fa-times-circle big_icon"></i>
                <h2>Error</h2>
                <span><%=message%></span>
                <i class="fas fa-times small_icon"></i>
            </div>
           <%}%>

           <% if(message == "Number already in use") {%>
            <div class="message incorrect" id="message">
                <i class="fas fa-times-circle big_icon"></i>
                <h2>Error</h2>
                <span><%=message%></span>
                <i class="fas fa-times small_icon"></i>
            </div>
           <%}%>
        <section class="dashboard_and_accounts">
            <div class="dashboard">
                <div class="dashboard_header">
                    <h2>Dashboard</h2>
                </div>
                <div class="dashboard_options">

                    <% if(user.is_doctor==true) {%>
                        <a href="/doctor_profile_edit" class="selected_option dashboard_option"><i class="fas fa-user-edit"></i><span>Profile</span></a>
                    <% } %>
                
                    <% if(user.is_doctor==false) {%>
                        <a href="/user_profile_edit" class="selected_option dashboard_option"><i class="fas fa-user-edit"></i><span>Profile</span></a>
                    <% } %>

                    <a href="/all_appointments" class="dashboard_option"><i class="fas fa-list"></i><span
                            class="">Appointments</span></a>

                    <a href="/medical_records" class="dashboard_option"><i class="fas fa-file-alt"></i><span class="">Medical
                            Records</span></a>

                    <a href="/doctor_create_schedule" class="dashboard_option"><i class="fas fa-pen-fancy"></i><span class="">Create/Edit
                            Schedules</span></a>

                    <a href="/change_password_settings" class="dashboard_option"><i class="fas fa-user-cog"></i><span
                            class="">Settings</span></a>

                </div>
            </div>

            <div class="accounts">
                <div class="accounts_header">
                    <h2>Accounts</h2>
                    <button class="save_changes" type="submit" form="changes_form">Save Changes</button>
                </div>
                <hr>
                <div class="form_container">

                    <form method="POST" name="changes_form" id="changes_form" autofill="off" action="/doctor_profile_edit">
                        <h3>Profile Picture</h3>
                        <div class="form_segment">
                            <div class="profile_picture_input_container">
                                <img id="new_profile_picture"
                                    <% if(user.profile_picture){ %>src="<%= user.profile_picture %>"><% } %>
                                <% if(!user.profile_picture){ %>src="https://cdn2.iconfinder.com/data/icons/medical-services-2/256/Doctor2-512.png">
                                <% } %>
                                <span>Pick a photo from your system</span>
                                <label for="profile_picture_input"><u>Select Photo</u></label>
                                <input type="file" name="profile_picture_input" id="profile_picture_input"
                                    accept="image/*" style="display: none;">
                            </div>


                            <div class="input_container">
                                <label for="name">Name</label>
                                <input type="text" name="name" id="name" required value="<%= user.name %>">
                            </div>
                        </div>

                        <hr>

                        <div class="form_segment">
                            <div class="input_container">
                                <div class="phone_label_container">
                                    <label for="number">Phone number</label>
                                    <label id="edit_number" class="edit"><u>Edit</u></label>
                                </div>
                                <input type="number" id="number" readonly=true name="number" required
                                    pattern="[0-9]{10}" value="<%= user.number %>">
                            </div>

                            <div class="input_container">
                                <label for="email">Email</label>
                                <input type="email" name="email" id="email" required value="<%= user.email %>"">
                            </div>

                            <div class="input_container">
                                <label for="gender">Gender</label>
                                <% if(user.gender=="male") { %>
                                <select name="gender" id="gender" required>
                                    <option selected value="male">Male</option>
                                    <option value="female">Female</option>
                                </select>
                                <% } %>

                                <% if(user.gender=="female") { %>
                                <select name="gender" id="gender" required>
                                    <option value="male">Male</option>
                                    <option selected value="female">Female</option>
                                </select>
                                <% } %>
                            </div>

                            <div class="input_container">
                                <label for="date">Date of birth</label>
                                <input type="date" required id="date" required name="date" value="<%= user.date %>">
                            </div>

                            <div class="input_container">
                                <label for="timezone">Timezone</label>
                                <input type="text" name="timezone" id="timezone" <% if(user.timezone) {%>
                                    value="<%= user.timezone%>"<% } %>>
                            </div>
                        </div>

                        <hr>

                        <div class="form_segment">
                            <div class="input_container">
                                <label for="house_number">House no./Street Name/Area</label>
                                <input type="text" name="house_number" id="house_number" <% if(user.house_number) {%>
                                    value="<%= user.house_number%>"<% } %>>
                            </div>

                            <div class="input_container">
                                <label for="colony">Colony/Street/Locality</label>
                                <input type="text" name="colony" id="colony" <% if(user.colony) {%>
                                    value="<%= user.colony%>"<% } %>>
                            </div>

                            <div class="input_container">
                                <label for="city">City</label>
                                <input type="text" name="city" id="city" value="<%= user.city %>">
                            </div>

                            <div class="input_container">
                                <label for="state">State</label>
                                <input type="text" name="state" id="state" value="<%= user.state %>">
                            </div>

                            <div class="input_container">
                                <label for="country">Country</label>
                                <input type="text" name="country" id="country" value="<%= user.country %>">
                            </div>
                        </div>

                        <hr>

                        <div class="form_segment">

                            <div class="input_container">
                                <label for="specializations">Specialization</label>
                                <input type="text" name="specializations" id="specializations"
                                    value="<% for(var j = 0; j < doctor_details.specializations.length ; j++ ) { %><%= doctor_details.specializations[j].value %>,<% } %>">
                            </div>
                            
                            <div class="input_container">
                                <label for="qualifications">Qualifications</label>
                                <input type="text" name="qualifications" id="qualifications"
                                    value="<% for(var j = 0; j < doctor_details.qualifications.length ; j++ ) { %><%= doctor_details.qualifications[j].value %>,<% } %>">
                            </div>

                            <div class="input_container">
                                <label for="treatments">Treatments</label>
                                <input type="text" name="treatments" id="treatments"
                                <% if(doctor_details.treatments) { %>
                                    value="<% for(var j = 0; j < doctor_details.treatments.length ; j++ ) { %><%= doctor_details.treatments[j].value %>,<% } %>">
                                <% } %>
                            </div>

                            <div class="input_container">
                                <label for="achievements">Achievements</label>
                                <input type="text" name="achievements" id="achievements"
                                    value="<% for(var j = 0; j < doctor_details.achievements.length ; j++ ) { %><%= doctor_details.achievements[j].value %>,<% } %>">
                            </div>

                            <div class="input_container">
                                <label for="hospitals">Hospitals</label>
                                <input type="text" name="hospitals" id="hospitals"
                                    value="<% for(var j = 0; j < doctor_details.hospitals.length ; j++ ) { %><%= doctor_details.hospitals[j].value %>,<% } %>">
                            </div>

                            <div class="input_container">
                                <label for="awards">Awards</label>
                                <input type="text" name="awards" id="awards"
                                    value="<% for(var j = 0; j < doctor_details.awards.length ; j++ ) { %><%= doctor_details.awards[j].value %>,<% } %>">
                            </div>

                            <div class="input_container">
                                <label for="experience">Years of experience</label>
                                <input type="number" name="experience" id="experience"
                                    value="<%= doctor_details.experience %>">
                            </div>

                            <div class="input_container">
                                <label for="fee">Average Fees</label>
                                <input type="number" name="fee" id="fee" value="<%= doctor_details.fee %>">
                            </div>

                            <div class="input_container">
                                <label for="description">Your Description</label>
                                <textarea name="description" id="description"><%= doctor_details.description %></textarea>
                            </div>

                        </div>
                </div>
            </div>
            </form>
    </div>
    </div>
    </section>
