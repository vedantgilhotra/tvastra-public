        <div class="siteflow">
            <% if(message == "Passwords do not match") {%>
                <div class="message incorrect" id="message">
                    <i class="fas fa-times-circle big_icon"></i>
                    <h2>Not Found</h2>
                    <span><%=message%></span>
                    <i class="fas fa-times small_icon"></i>
                </div>
               <%}%>

               <% if(message == "OTP verified") {%>
                <div class="message success" id="message">
                    <i class="fas fa-check-circle big_icon"></i>
                    <h2>Error</h2>
                    <span><%=message%></span>
                    <i class="fas fa-times small_icon"></i>
                </div>
               <%}%>
    
            <section class="login_box">
                <h3>Update Password</h3>
                <hr>
                <div class="login_box_inner">
                   <form method="POST" action="/update_password">
                    
                        <input type="text" name="new_password" required id="new_password" placeholder="Enter New Password">

                        <input type="password" name="confirm_password" required id="confirm_password" placeholder="Confirm Password">
                    <button type="submit" class="update"><span>UPDATE</span><i class="fas fa-arrow-right"></i></button>
                   </form>
                </div>
            
            </section>
            <span class="footer_end">All Rights Reserved Â© Tvastra 2020</span>
