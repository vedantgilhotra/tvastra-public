    <div class="modal">
        <div class="form_container_modal">
            <form method="POST" id="create_schedule_form" action="/doctor_create_schedule">
                <i class="fas fa-times modal_close"></i>
                <div class="input_container">
                    <label for="days">Select days:</label>
                    <select name="day" id="days" required multiple>
                        <option value="monday">Monday</option>
                        <option value="tuesday">Tuesday</option>
                        <option value="wednesday">Wednesday</option>
                        <option value="thursday">Thursday</option>
                        <option value="friday">Friday</option>
                        <option value="saturday">Saturday</option>
                        <option value="sunday">Sunday</option>
                    </select>
                </div>
                <div class="input_container">
                    <label for="hospital">Select hospital:</label>
                    <select name="hospital" id="hospital" required>
                        <% for(var k = 0 ; k < doctor_details.hospitals.length; k++) { %>
                        <option value="<%= doctor_details.hospitals[k].value %>"><%= doctor_details.hospitals[k].value %></option>
                        <% } %>
                    </select>
                </div>
                <div class="input_container">
                    <label for="start_time">From (time)</label>
                    <input data-clocklet id="start_time" name="start_time" placeholder="Starting time" required >
                </div>

                <div class="input_container">
                    <label for="end_time">To (time)</label>
                    <input data-clocklet="class-name: placement: top;" id="end_time" name="end_time" placeholder="Ending time" required >
                </div>

                <div class="input_container">
                    <label for="interval">Time interval(mins):</label>
                    <input type="number" name="interval" id="interval" min="15" step="15" max="60" required>
                </div>
                <div class="form_button">
                    <button class="cancel" onclick="modal_close_function()">Cancel</button>
                    <button class="schedule_submit" type="submit">Create Schedule</button>
                </div>
            </form>
        </div>
