    <div class="accounts">
        <div class="accounts_header">
            <h2>Account Settings</h2>
            <button class="change_password" id="change_password" type="submit" form="changes_form">Change Password</button>
        </div>
        <hr>
        <div class="form_container">

            <form method="POST" name="changes_form" id="changes_form" autofill="off" action="/change_password_settings">

                <div class="form_segment">
                    <div class="input_container">
                        <label for="current_password">Current Password</label>
                        <input type="password" name="current_password" id="current_password" required">
                    </div>
                </div>

                <hr>

                <div class="form_segment">
                    <div class="input_container">
                        <label for="new_password">New Password</label>
                        <input type="text" name="new_password" id="new_password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
                    </div>

                    <div class="input_container">
                        <label for="confirm_new_password">Confirm New Password</label>
                        <input type="password" name="confirm_new_password" id="confirm_new_password" required>
                    </div>
                </div>
            </form>
        </div>
