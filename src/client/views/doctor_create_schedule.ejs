           <%}%>
        
        <section class="dashboard_and_page_body">
            <div class="dashboard">
                <div class="dashboard_header">
                    <h2>Dashboard</h2>
                </div>
                <div class="dashboard_options">

                    <a href="/doctor_profile_edit" class="dashboard_option"><i
                            class="fas fa-user-edit"></i><span>Profile</span></a>

                    <a href="/all_appointments" class="dashboard_option"><i class="fas fa-list"></i><span
                            class="">Appointments</span></a>

                    <a href="/medical_records" class="dashboard_option"><i class="fas fa-file-alt"></i><span class="">Medical
                            Records</span></a>

                    <a href="/doctor_create_schedule" class="selected_option dashboard_option"><i class="fas fa-pen-fancy"></i><span class="">Create/Edit
                            Schedules</span></a>

                    <a href="/change_password_settings" class="dashboard_option"><i class="fas fa-user-cog"></i><span
                            class="">Settings</span></a>

                    

                </div>
            </div>

            <div class="page_body">
                <div class="page_body_header">
                    <button class="create_new_schedule" onclick="modal_open()" type="submit">Create New Schedule</button>
                    <h2>All schedules</h2>
                </div>
                <div class="main">
                    <% if(doctor_details.schedules.length == 0) { %>
                        <h2 class="no_schedules">No schedules available yet, click on 'Create New Schedule' to create one</h2>
                    <% } %>
                    <% for(var i=0; i < doctor_details.schedules.length ; i++){ %>
                    <div class="made_schedule <% if( doctor_details.schedules[i].is_active == false ) {%>made_schedule_inactive <% } %>" id="made_schedule_<%= i %>">
                        <h3 class="schedule_day"><%= doctor_details.schedules[i].day %></h3>
                        <div class="schedule_inner_details_container">
                            <h3 class="schedule_hospital"><%= doctor_details.schedules[i].hospital %></h3>
                            <span class="schedule_timeframe"><%= doctor_details.schedules[i].start_time.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>-<%= doctor_details.schedules[i].end_time.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></span>
                        </div>
                        <div class="schedule_buttons">
                            <a class="remove_slots_button_link" href="/doctor_remove_schedule?id=<%= i %>" id="remove_slots_button_link_<%= i %>" ><button class="remove_slots"   id="remove_slots_<%= i %>">Remove Slots</button></a>
                            <button class="view_slots" id="view_slot_<%= i %>">View Slots</button>
                            <input type="checkbox" class="made_schedule_selection" name="made_schedule_selection" id="made_schedule_selection_<%= i %>" <% if( doctor_details.schedules[i].is_active == false ) {%>checked = true <% } %>>
                        </div>
                        <div class="slots_container" id="slots_container_<%= i %>">
                            <% for(var j =0 ; j < doctor_details.schedules[i].slots.length; j++ ) { %>
                            <div class="slot <% if(doctor_details.schedules[i].slots[j].is_active == false) {%>slot_inactive<% } %>" id="slot_<%= i %>_<%= j %>">
                                <span><%= doctor_details.schedules[i].slots[j].start_time.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>-<%= doctor_details.schedules[i].slots[j].end_time.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></span>
                                <input type="checkbox" class="slot_selection" name="slot_selection" id="slot_input_<%= i %>_<%= j %>" <% if(doctor_details.schedules[i].slots[j].is_active == false) { %>checked == true<% } %>>
                            </div>
                            <% } %>
                        </div>
                    </div>
                    <% } %>
                </div>
                
            </div>
            
    </div>
    </div>
