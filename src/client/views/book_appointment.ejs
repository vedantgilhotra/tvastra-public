    <div class="siteflow">
        <div class="appointment_info">
            <h2>In Clinic Appointment</h2>
            <hr>
            <div class="timing_info">
                <i class="fas fa-calendar-plus"></i>
                <span class="date_value"><%= date_today.toLocaleDateString(undefined,{ weekday: 'long', year: 'numeric', month: 'short', day: 'numeric' }) %></span>
                <i class="fas fa-clock"></i>
                <span class="from_time">From: <%= slot_details.start_time.toLocaleTimeString([],{hour: '2-digit', minute:'2-digit'}) %></span>
                <i class="fas fa-clock"></i>
                <span class="to_time">To: <%= slot_details.end_time.toLocaleTimeString([],{hour: '2-digit', minute:'2-digit'}) %></span>
            </div>

            <a href="/doctor"><span class="change_date_and_time">Change Date & Time</span></a>

            <div class="doctor_info">
                <img class="doctor_image" src="<%= doctor_details.profile_picture %>">
                <div class="hospital_names">
                    <span class="doctor_name"><%= doctor_details.name %></span>
                    <% for(var i = 0 ; i < doctor_details.hospitals.length ; i++) {%><span class="hospital_name"><%= doctor_details.hospitals[i].value %></span><% } %>
                </div>

                <img src="https://cdn0.iconfinder.com/data/icons/health-icons-rounded/110/Hospital-512.png">
                <span class="hospital_name"><%= doctor_details.hospitals[hospital_number].value %></span>

            </div>

        </div>
        <div class="col2">
            <h2>Patient Details:</h2>
            <hr>


            <h3>Please provide the following information:</h3>

            <form class="patient_details" id="patient_details" method="POST" action="/book_appointment">
                <div class="hidden_information" style="display: none;">
                    <input type="text" name="slot_id" id="slot_id" value="<%= slot_details._id %>" readonly>
                    <input type="text" name="doctor_object_id" id="doctor_object_id" value="<%= doctor_details._id %>" readonly>
                    <input type="text" name="schedule_id" id="schedule_id" value="<%= slot_details.schedule_id %>" readonly>
                    <input type="text" name="booking_date" id="booking_date" value="<%= date_today.toLocaleDateString() %>" readonly>
                    <input type="text" name="start_time" id="start_time" value="<%= slot_details.start_time %>" readonly>
                    <input type="text" name="end_time" id="end_time" value="<%= slot_details.end_time %>" readonly>
                </div>
                <div class="radio_buttons">
                    <div class="input_container">
                        <input type="radio" name='appointment_for' id="appointment_for_self" value="self" checked required>
                        <label for="appointment_for_self">Self</label>
                    </div>
                    <div class="input_container">
                        <input type="radio" name="appointment_for" id="appointment_for_else" value="else" required>
                        <label for="appointment_for_else">Someone else</label>
                    </div>
                </div>

                <div class="input_container">
                    <label for="name">Patient's full name:</label>
                    <input type="text" name="name" id="name" value="<%= user.name %>" readonly required>
                </div>

                <div class="input_container">
                    <label for="number">Mobile Number:</label>
                    <input type="number" pattern="[0-9]{10}" name="number" id="number" value="<%= user.number %>" readonly required>
                </div>

                <div class="input_container">
                    <label for="patient_number">Patient's Mobile Number:</label>
                    <input type="number" name="patient_number" id="patient_number" value="<%= user.number %>" readonly required>
                </div>

                <div class="input_container">
                    <label for="email">Patient's Email:</label>
                    <input type="email" name="email" id="email" value="<%= user.email %>" readonly required>
                </div>

                <button type='submit' class="book_appointment">Book Appointment</button>

            </form>
            
        </div>
