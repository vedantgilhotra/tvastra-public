            <section class="details_box">
                <h3>Welcome</h3>
                <hr>
                <div class="details_box_inner">
                   <form method="POST" action="/doctor_details_form" id="doctor_details_form" enctype="multipart/form-data">
                        <label for="description">Describe yourself</label>    
                        <textarea id="description" name="description" required form="doctor_details_form"></textarea>
                        
                        <label for="profile_picture">Upload Your Profile Picture</label>
                        <input type="file" name="profile_picture" id="profile_picture" accept="image/*" required>
                        
                        <label for="hospitals">Your Hospitals</label>
                        <input type="text" name="hospitals" id="hospitals" required>
                        
                        <label for="achievements">Achievements</label>
                        <input type="text" name="achievements" id="achievements" required>
                        
                        <label for="experience">Years of Experience</label>
                        <input type="number" name="experience" id="experience" required>
                        
                        <label for="qualifications">Qualifications</label>
                        <input type="text" name="qualifications" id="qualifications" required>

                        <label for="awards">Awards(if any)</label>
                        <input type="text" name="awards" id="awards" >

                        <label for="specializations">Your Specializations</label>
                        <input type="text" name="specializations" id="specializations" required>

                        <label for="fee">Your average fee</label>
                        <input type="number" name="fee" id="fee" min="0" max="10000" placeholder="Your average fee (in Rs)" required>

                        <button type="submit" class="submit"><span>SUBMIT</span><i class="fas fa-arrow-right"></i></button>
                    </form>
                </div>
            
                <span class="already_registered">Already Registered? <a href="/login"><b class="login_link">Login</b></a></span>
            </section>
