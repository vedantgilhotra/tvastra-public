    <div class="modal">
        <div class="form_container_modal">
            <form method="POST" class="main_form" id="create_record_form" action="/medical_records" enctype="multipart/form-data">
                <i class="fas fa-times modal_close"></i>
                <div class="pictures_container">
                    <label for="pictures_input">
                        <i class="fas fa-plus"></i>
                        Add Photos
                    </label>
                    <input type="file" required multiple name="pictures_input" id="pictures_input" style="display: none;" accept="image/*">
                </div>
                
                <div class="input_container">
                    <input type="text" name="title" id="title" placeholder="Title" required>
                </div>

                <div class="input_container">
                    <input type="text" name="name" id="name" value="<%= user.name %>" required>
                </div>

                <div class="input_container">
                    <input type="date" name="date" id="date" required>
                </div>

                <hr>

                <label class="record_type_label" for="record_type">Type of Record</label>
                <input type="text" name="record_type" id="record_type" required style="display: none;">

                <div class="type_div_container">

                    <div class="record_type report">
                        <i class="fas fa-file-alt"></i>
                        <span>Report</span>
                    </div>
    
                    <div class="record_type prescription">
                        <i class="fas fa-file-alt"></i>
                        <span>Prescription</span>
                    </div>
    
                    <div class="record_type invoice">
                        <i class="fas fa-file-alt"></i>
                        <span>Invoice</span>
                    </div>
                </div>
                
                <div class="form_buttons">
                    <button class="cancel" type="button" onclick="modal_close_function()">Cancel</button>
                    <button class="record_submit" id="submit_button" type="submit">Create record</button>
                </div>
            </form>
        </div>
