<!DOCTYPE html>
<html>

<head>
    <title>Admin Panel Home</title>
    <link href="/scss/reset.css" rel="stylesheet" type="text/css">
    <link href="/scss/theme.css" rel="stylesheet" type="text/css">
    <link href="/scss/admin_panel_home.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
        integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>

    <nav class="phone_and_tab_nav">
        <a href="/admin_panel_home"><img id="brand_logo" src="/images/logo.png" alt="Brand Logo"></a>

        <div class="right_aligned">
            <div class="profile_dropdown">
                <% if(user.profile_picture) {%>
                <img src="<%= user.profile_picture %>">
                <% } %>
                <% if(!user.profile_picture) {%>
                <img src="https://tvastra-profile-pictures.s3.ap-south-1.amazonaws.com/iconfinder_user_1608727.png">
                <% } %>
                <i class="fas fa-chevron-down" id="profile_picture_dropwdown_icon"></i>
                <div class="profile_dropdown_options">
                    <% if(user.is_doctor==false) {%>
                    <a href="/user_profile_edit">
                        <div class="profile_block">
                            <img class="navbar_profile_picture" src="<%= user.profile_picture %>">
                            <span class="navbar_username"><%= user.name %></span>
                            <span class="navbar_user_mobile_number"><%= user.number %></span>
                        </div>
                    </a>
                    <% } %>
                    <% if(user.is_doctor==true) {%>
                    <a href="/doctor_profile_edit">
                        <div class="profile_block">
                            <img class="navbar_profile_picture" src="<%= user.profile_picture %>">
                            <span class="navbar_username"><%= user.name %></span>
                            <span class="navbar_user_mobile_number"><%= user.number %></span>
                        </div>
                    </a>
                    <% } %>

                    <a href="#"><span class="option_hover">Appointments</span></a>
                    <hr>
                    <a class="my_lab_tests" id="my_lab_tests_link" href="#"><span class="option_hover">Lab
                            Tests</span></a>
                    <hr>
                    <a class="my_medicine_orders" id="my_medicine_orders_link" href="#"><span
                            class="option_hover">Medicine Orders</span></a>
                    <hr>
                    <a class="my_payments" id="my_payments_link" href="#"><span class="option_hover">Payments</span></a>
                    <hr>
                    <a href="/logout"><span class="option_hover">Logout</span></a>
                    <hr>
                </div>
            </div>
            <i id="sidebar_toggle" class="fas fa-bars"></i>
        </div>
    </nav>

    <nav class="laptop_nav">

        <a href="/admin_panel_home"><img
                src="https://s3.ap-south-1.amazonaws.com/appdev.konfinity.com/css/tasks/Logo.jpg"></a>

        <div class="nav_links">
            <a href="/admin_panel_doctors">
                <p>Doctors</p>
            </a>
            <a href="/admin_panel_hospitals">
                <p>Hospitals</p>
            </a>
            <p>Treatment</p>
            <p>Other Services</p>
        </div>
        <div class="nav_buttons">

            <div class="container_element">
                <span class="loggedinuser"><%=  user.name %><i class="fas fa-chevron-down"></i></span>
                <div class="user_dropdown">
                    <div class="dropdown_options">

                        <a href="/admin_profile_edit">
                            <div class="profile_block">
                                <% if(user.profile_picture) {%>
                                <img class="navbar_profile_picture" src="<%= user.profile_picture %>">
                                <% } %>
                                <% if(!user.profile_picture) {%>
                                <img class="navbar_profile_picture"
                                    src="https://tvastra-profile-pictures.s3.ap-south-1.amazonaws.com/iconfinder_user_1608727.png">
                                <% } %>
                                <span class="navbar_username"><%= user.name %></span>
                                <span class="navbar_user_mobile_number"><%= user.number %></span>
                            </div>
                        </a>



                        <a href="/admin_panel_appointments"><span class="option_hover">Appointments</span></a>
                        <hr>
                        <a class="my_lab_tests" id="my_lab_tests_link" href="#"><span class="option_hover">Lab
                                Tests</span></a>
                        <hr>
                        <a class="my_medicine_orders" id="my_medicine_orders_link" href="#"><span
                                class="option_hover">Medicine Orders</span></a>
                        <hr>
                        <a class="my_payments" id="my_payments_link" href="#"><span
                                class="option_hover">Payments</span></a>
                        <hr>
                        <a href="/logout"><span class="option_hover">Logout</span></a>
                        <hr>

                    </div>
                </div>
            </div>
        </div>

    </nav>

    <div class="siteflow">

        <% if(message == "record(s) overlap,please check") {%>
        <div class="message incorrect" id="message">
            <i class="fas fa-times-circle big_icon"></i>
            <h2>Error</h2>
            <span><%=message%></span>
            <i class="fas fa-times small_icon"></i>
        </div>
        <%}%>

        <% if(message=="Cancelled Booking successfully") {%>
        <div class="message success" id="message">
            <i class="fas fa-check-circle big_icon"></i>
            <h2>Success</h2>
            <span><%=message%></span>
            <i class="fas fa-times small_icon"></i>
        </div>
        <%}%>
        

        <section class="dashboard_and_page_body">
            <div class="dashboard">
                <div class="dashboard_header">
                    <h2>Dashboard</h2>
                </div>
                <div class="dashboard_options">

                    

        
        <a href="/admin_profile_edit" class="dashboard_option"><i class="fas fa-user-edit"></i><span>Profile</span></a>

        <a href="/admin_panel_users" class="dashboard_option"><i class="fas fa-file-alt"></i><span
                class="">Users</span></a>

        <a href="/admin_panel_doctors" class="dashboard_option"><i class="fas fa-file-alt"></i><span
            class="">Doctors</span></a>

        <a href="/admin_panel_hospitals" class="dashboard_option"><i class="fas fa-file-alt"></i><span
            class="">Hospitals</span></a>
        
        <a href="/admin_change_password_settings" class="dashboard_option"><i class="fas fa-user-cog"></i><span class="">Settings</span></a>

    </div>
    </div>
    <div class="page_body">

    </div>
    </section>
    </div>

    <footer>



        <div class="footer_flex_mobile">

            <img src="https://s3.ap-south-1.amazonaws.com/appdev.konfinity.com/css/tasks/footer.png">

            <span>Doctor</span>

            <span>Hospital</span>

            <span>Treatment</span>

            <span>Other Services</span>

            <span>FAQs</span>

            <span><i class="fab fa-facebook-f"></i> &nbsp;&nbsp;&nbsp;&nbsp; <i class="fab fa-pinterest-p"></i>
                &nbsp;&nbsp;&nbsp;&nbsp; <i class="fab fa-twitter"></i> &nbsp;&nbsp;&nbsp;&nbsp; <i
                    class="fab fa-google-plus-g"></i> &nbsp;&nbsp;&nbsp;&nbsp; <i class="fab fa-instagram"></i></span>

            <span class="footer_end">All Rights Reserved. © tvastra 2018</span>

        </div>

        <div class="footer_flex_tab_laptop">
            <div class="footer_flex_inner_one">
                <div class="footer_flex_inner_one_left">
                    <span>Doctor</span>

                    <span>Hospital</span>

                    <span>Treatment</span>

                    <span>Other Services</span>

                    <span>FAQs</span>

                </div>

                <img src="https://s3.ap-south-1.amazonaws.com/appdev.konfinity.com/css/tasks/footer.png">

            </div>

            <div class="footer_flex_inner_two">
                <span class="footer_end">All Rights Reserved. © tvastra 2018</span>
                <span><i class="fab fa-facebook-f"></i> &nbsp;&nbsp;&nbsp;&nbsp; <i class="fab fa-pinterest-p"></i>
                    &nbsp;&nbsp;&nbsp;&nbsp; <i class="fab fa-twitter"></i> &nbsp;&nbsp;&nbsp;&nbsp; <i
                        class="fab fa-google-plus-g"></i> &nbsp;&nbsp;&nbsp;&nbsp; <i
                        class="fab fa-instagram"></i></span>
            </div>
        </div>



    </footer>
    
    <div class="sidebar_shade">
        <div class="sidebar">
            <i class="fas fa-arrow-right" id="sidebar_close"></i>
            <a href="/admin_panel_home">
                <div class="sidebar_entry">
                    <span class="sidebar_span">Home</span>
                </div>
            </a>
            <a href="/admin_panel_doctors">
                <div class="sidebar_entry">
                    <span class="sidebar_span">Doctors</span>
                </div>
            </a>
            <a href="/admin_panel_hospitals">
                <div class="sidebar_entry">
                    <span>Hospitals</span>
                </div>
            </a>
            <a href="/admin_change_password_settings">
                <div class="sidebar_entry">
                    <span>Settings</span>
                </div>
            </a>
        </div>
    </div>
    <script src="/scripts/sidebar_navigation.js" type="text/javascript"></script>
    <script src="/scripts/message_animate.js" type="text/javascript"></script>
    <script src="/scripts/admin_panel_home.js" type="text/javascript"></script>
</body>

</html>