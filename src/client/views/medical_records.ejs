                </div>
            </div>

            <div class="page_body">
                <div class="page_body_header">
                    <button class="create_new_record" onclick="modal_open()" type="submit">Add Record</button>
                    <h2>Medical Records</h2>
                </div>
                <div class="main">
                    <% if(user.medical_records.length == 0) { %>
                        <h2 class="no_records">No records available yet, click on 'Add Record' to add one</h2>
                    <% } %>
                    <% for(var i=0; i < user.medical_records.length ; i++){ %>
                    <div class="made_record" id="made_record_<%= i %>">
                        <!-- template for the records displayed -->
                        <a href="/medical_record_display?id=<%= i %>">
                            <div class="date_display">
                                <% var months_array = ['January','February','March','April','May','June','July','August','September','October','November','December']; %>
                                <span><%= user.medical_records[i].date.getDate() %> <%= months_array[user.medical_records[i].date.getMonth()]%></span>
                            </div>
                        </a>

                        <div class="title_name_type">
                            <span class="record_title"><%= user.medical_records[i].title %></span>
                            <span class="record_name"><%= user.medical_records[i].name %></span>
                            <span class="record_type"><%= user.medical_records[i].record_type %></span>
                        </div>

                        <form method="POST" action="/medical_record_delete">
                            <input type="text" name="id" value="delete_record_<%= i %>" style="display: none;">
                            <button type="submit" class="delete_record" id="delete_record_<%= i %>" >Delete</button>
                        </form>
                    </div>
                    <% } %>
                </div>
                
            </div>
            
    </div>
